{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "exclude": ["node_modules", ".cache-synpress/**/*", ".yarn/**/*", "playwright-report/**/*", "test-results/**/*"],
  "include": ["*.config.js", "*.config.ts", "*.config.cjs", "src"]
}
